{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@webapp/components/*": ["src/components/*"],
      "@webapp/constants/*": ["src/constants/*"],
      "@webapp/themes/*": ["src/themes/*"],
      "@webapp/fonts/*": ["src/fonts/*"],
      "@webapp/utils/*": ["src/utils/*"],
      "@webapp/mocks/*": ["src/mocks/*"],
      "@webapp/interfaces/*": ["src/interfaces/*"],
      "@webapp/helpers/*": ["src/helpers/*"],
      "@webapp/pages/*": ["src/pages/*"],
      "@webapp/services/*": ["src/services/*"],
      "@webapp/contexts/*": ["src/contexts/*"],
      "@webapp/fetcher/*": ["src/fetcher/*"],
      "@webapp/types/*": ["src/types/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "types": ["node", "jest", "@types/testing-library__jest-dom"]
}
